.recommendSongContainer .header{
  position: relative;
  width: 100%;
  height: 300rpx;

}
.recommendSongContainer .header image{
  width: 100%;
  height: 100%;
}

.recommendSongContainer .header .data{
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -100rpx;
  margin-top: -50rpx;

  width: 200rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
}
.header .data .moth{
  font-size: 30rpx;
}

/* 列表头部区域 */
.listcontainer{
  padding: 10rpx;
  background-color: #fff;
  border-radius: 10rpx;
  position: relative;
  margin-top: -20rpx;
}
.listcontainer .nav{
  line-height: 80rpx;
  height: 80rpx;
  font-size: 28rpx;

}

.listcontainer .nav .listMore{
  float: right;
}

/* 列表内容区域 */

.listScroll{
  width: 100%;
  height: calc(100vh - 364rpx);
}
.listScroll .scrollItem{
  position: relative;
  width: 100%;
  height: 100rpx;
  display: flex;
  margin-bottom: 20rpx;
}
.listScroll .scrollItem image{
  height: 80rpx;
  width: 80rpx;
}
.listScroll .scrollItem .musicInfo{
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  padding-left: 20rpx;
  white-space: nowrap;
  overflow: hidden;
  max-width: 400rpx;
  text-overflow: ellipsis;
  
}
.listScroll .scrollItem .iconfont{
  position: absolute;
  top: 30rpx;
  right: -10rpx;
  width: 80rpx;
  height: 80rpx;
  text-align: right;
  
}


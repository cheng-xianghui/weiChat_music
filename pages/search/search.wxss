

.searchContainer{
  width: 100%;
  padding: 10rpx;

}
.searchContainer .header{
  width: 100%;
  display: flex;
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
  
}
.header .searchInput{
  background: rgba(237, 237, 237, .3);
  flex: 1;
  position: relative;
  
}
.header .searchIconfont{
  position: absolute;
  margin-left: 10rpx;
}
.header .searchInput input{
  margin-left:50rpx ;
  height: 60rpx;
}
.header .right{
  width: 110rpx;
  text-align: center;
}
/* .placeholder{

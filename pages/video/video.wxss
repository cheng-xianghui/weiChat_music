
/* 头部区域 */
.videoContainer .header{
  display: flex;
  padding: 10rpx 20rpx;

}

.videoContainer .header image{
  width: 60rpx;
  height: 60rpx;
}

.videoContainer .header .search{

  flex: 1;
  text-align: center;
  line-height: 60rpx;
  border: 1px solid #eee;
  font-size: 26rpx;
  color:#d43c33 ;
}

/* 推荐导航 */

.navScroll{
  display: flex;
  white-space: nowrap;
  height: 60rpx;
}
.navScroll .navItem{
  padding: 0 30rpx;
  font-size: 28rpx;
  line-height:60rpx;
  height: 60rpx;
}
.navScroll .navContent{
  height: 60rpx;
  box-sizing: border-box;
}
.navItem .active{
  border-bottom: 1px solid #d43c33;
}

/* 视频列表 */
.videoScroll{
  margin-top: 10rpx;
  /* calc:可以动态的计算css的宽高
     运算符左右两侧加空格否则会失效
     视口单位：vh vw   1vh=1%的视口高度   1vw=1%的视口宽度
  */
  /* 使导航栏固定 */
  height: calc(100vh - 142rpx);
}
.videoItem{
  padding: 0 3%;
}
.videoItem .title{
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.videoItem .common{
  width: 100%;
  height: 360rpx;
  border-radius: 10rpx;
}
.videoItem text{
 font-size: 26rpx;
}
.videoItem .nick image{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}
.nick {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 20rpx;
  vertical-align: middle;
}
.nick .left text{
  margin-left: 10rpx;
}

.nick .right .iconfont{
  font-size: 40rpx;
}
.nick .right button{
  width: 10rpx;
  height: 50rpx;
  display: inline;
  padding: 0;
}


